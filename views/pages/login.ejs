<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login | Test Review &#38; Trivia</title>
    <link rel="stylesheet" href="main.css">
</head>

<body>
    <header>
        <a href="/"><img src="#" alt="trivia icon"></a>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/create-review">Test Review</a></li>
                <li><a href="/play-trivia">Trivia</a></li>
                <li><a href="/login" style="margin-left:2em" id="login">Sign-in</a>
                    <a href="/logout" class="hidden" id="logout">Logout | </a><span id="name" class="hidden"></span></li>
            </ul>
        </nav>
    </header>
    <h2>sign-in</h2>
    <% if(typeof res == 'string' && res) { %>
        <%- res %>
            <%}%>

                <% if(typeof email == 'string' && email) { %>
                    <%= email %>
                        <%}%>
                            <form>
                                <input type="text" name="email" id="email" placeholder="email" value="<% if(typeof email == 'string' && email) { %><%= email %><%}%>"><br>
                                <input type="password" name="password" id="password" placeholder="password"><br>
                                <input type="button" value="Sign-in" id="submit"><br>
                                <a href="/sign-up" id="sign">Sign-up</a>
                            </form>
                            <script src="login.js"></script>
                            <script src="home.js"></script>
</body>

</html>